{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [".env"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "dev": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true
        },
        "test": {
            "inputs": ["src/**/*.ts", "test/**/*.ts"]
        },
        "lint": {
            "outputs": []
        },
        "lint:fix": {
            "cache": false
        }
    }
}
